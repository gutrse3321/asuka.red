body
  background: #000

.main
  position: absolute
  width: 100%
  height: 100%
  .img__bg
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)

@media screen and (max-width: 1120px)
  .img__bg
    min-width: 120%
    height: 120%

@media screen and (min-width: 1120px)
  .img__bg
    width: 120%
    min-height: 120%
