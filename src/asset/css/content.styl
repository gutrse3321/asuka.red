body
  background: #000

.main
  position: absolute
  width: 100%
  height: 100%
  .img__bg
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    z-index: 2
  .img__nerv
    position: absolute
    left: 60%
    top: 50%
    transform: translate(-50%, -50%)
    max-width: 60%
    max-height: 60%
    z-index: 3
  .img__asuka
    position: absolute
    left: 50%
    bottom: 0
    transform: translateX(-50%)
    max-width: 80%
    max-height: 80%
    z-index: 4

@media screen and (max-width: 1120px)
  .img__bg
    min-width: 120%
    height: 120%

@media screen and (min-width: 1120px)
  .img__bg
    width: 120%
    min-height: 120%
