@import "reset.styl"
@import "variable.styl"
@import "fonts.styl"

html, body
  background: $color-deep-red
  font-size: calc(100vw / 7.5)
  font-family: "zpix"
  color: $color-white
  @media screen and (min-width: 1140px)
    font-size: calc(750px / 7.5)

input
  margin: 0
  padding: 0
  appearance: none
  outline: 0
  border-radius: 0
  font-family: zpix
  background: transparent
  border: none

textarea
  margin: 0
  padding: 0
  border: none
  resize: vertical
  outline: none
  background: transparent
  font-family: zpix
  color: #fff

.main
  position: absolute
  width: 100%
  .container
    position: relative
    width: 100%
    min-height: 100%
    height: auto
    z-index: 1
    @media screen and (min-width: 1140px)
      left: 50%
      transform: translate(-50%, 0)
      width: 750px
