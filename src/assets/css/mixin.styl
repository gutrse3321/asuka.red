//定位
position($type = absolute, $top = auto, $right = auto, $bottom = auto, $left = auto)
  top: $top
  right: $right
  bottom: $bottom
  left: $left

//居中
setCenter($type = absolute)
  position: $type
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

//文字尾三点
noWrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
