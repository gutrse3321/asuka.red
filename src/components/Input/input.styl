@import "~@/assets/css/variable.styl"

.input-container
  display: flex
  flex-direction: column
  margin-top: .2rem
  width: 100%
  input
    height: .3rem
    border: .02rem solid $color-light-red
    color: #fff
    background: rgba($color-black, 0.2)
    transition: .5s all ease-in-out
    &:hover
      border: .02rem solid $color-yellow
      background: rgba($color-black, 1)
    &:focus
      padding-left: .1rem
      border: .02rem solid $color-yellow
      background: rgba($color-black, 1)
  textarea
    margin-top: .1rem
    border: .02rem solid $color-light-red
    background: rgba($color-black, 0.2)
    height: 1rem
    min-height: 1rem
    max-height: 3rem
    overflow-y: auto
    overflow-x: hidden
    word-break: break-word
    transition: .5s all ease-in-out
    &:hover
      border: .02rem solid $color-yellow
      background: rgba($color-black, 1)
    &:focus
      padding: .1rem
      height: 3rem
      border: .02rem solid $color-yellow
      background: rgba($color-black, 1)
  .submit
    margin-top: .1rem
    width: .6rem
    height: .24rem
    border: .02rem solid $color-light-red
    background: rgba($color-black, 0.5)
    font-size: .16rem
    line-height: .26rem
    text-align: center
    cursor: pointer
    transition: .3s all ease-in
    &:hover
      border: .02rem solid $color-yellow
      background: rgba($color-black, 1)
